@model VetClinic.Data.Data.Clinic.PatientType

@{
    ViewData["Title"] = "Delete";
}
<h4>Usuń:</h4>
<h2>Typ pacjenta</h2>
<hr />

<div class="row inputGroupMargin">
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text">Nazwa</span>
        </div>
        <input type="text" class="form-control" value="@Model.Name">
    </div>
</div>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AddedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AddedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UpdatedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PatientTypeAddedUser)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PatientTypeAddedUser.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PatientTypeUpdatedUser)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PatientTypeUpdatedUser.City)
        </dd>
    </dl>
</div>
<hr />
@*Dodany class margin do pierwszego buttona*@

<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="PatientTypeID" />
        <input type="submit" value="Usuń" class="btn btn-primary buttMargin" />

        <a class="btn btn-outline-primary" role="button" asp-action="Index">
            <span class="fas fa-arrow-circle-left"></span> Wróć do listy
        </a>
    </form>
</div>
