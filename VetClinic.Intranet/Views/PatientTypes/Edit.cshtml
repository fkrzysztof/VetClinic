@model VetClinic.Data.Data.Clinic.PatientType

@{
    ViewData["Title"] = String.Format("Edycja typu pacjenta {0}", Model.Name);
}

<div class="container">
    <div class="row">
        <form asp-action="Edit" enctype="multipart/form-data" class="col">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PatientTypeID" />
            <div class="form-row">
                <div class="form-group col-12">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="label1">Nazwa</span>
                        </div>
                        <input type="text" asp-for="Name" class="form-control" aria-describedby="label1" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-12">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Opis</span>
                        </div>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>

            @await Component.InvokeAsync("DetailsComponent", new
            {
               AddedDate = @Model.AddedDate,
               AddedUserID = @Model.AddedUserID,
               UpdatedDate = @Model.UpdatedDate,
               UpdatedUserID = @Model.UpdatedUserID
            })

            <div class="row">
                <div class="col">
                    @if (Model.IsActive)
                    {
                        <form asp-action="Delete" asp-route-id="@Model.PatientTypeID" onsubmit="alert('Na pewno chcesz usunąć typ pacjenta?')">
                            <input type="hidden" asp-for="PatientTypeID" />
                            <input type="submit" value="Usuń typ pacjenta" class="btn btn-outline-danger buttMargin" />
                        </form>
                    }
                    else
                    {
                        <form asp-action="Restore" asp-route-id="@Model.PatientTypeID">
                            <input type="hidden" asp-for="PatientTypeID" />
                            <input type="submit" value="Przywróć typ pacjenta" class="btn btn-outline-success buttMargin" />
                        </form>
                    }
                </div>
                <div class="col">
                    <input type="submit" value="Zapisz zmiany" class="btn btn-success float-right buttMargin" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
