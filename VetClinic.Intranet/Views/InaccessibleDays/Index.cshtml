@model IEnumerable<VetClinic.Data.Data.Clinic.InaccessibleDay>

@{
    ViewData["Title"] = "Dni wolne";
}
<div class="row mb-3">
    <div class="col-12">
        <a class="btn btn-outline-success float-right mb-3" role="button" aria-haspopup="true" aria-expanded="false" asp-action="Create">
            <i class="fas fa-plus-circle"></i>
            Dodaj
        </a>
    </div>
</div>

<div class="justify-content-end">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-xl-3 col-lg-4 col-md-6">
                <div class="card mb-4 border-danger">
                    <div class="card-body">
                        <h3 class="card-title">@Convert.ToString($"{ item.Date:dd}" + "." + $"{item.Date:MM}" + "." + $"{item.Date:yyyy}")</h3>

                        <form asp-action="Delete" asp-route-id="@item.InaccessibleDayID" onsubmit="alert('Na pewno chcesz usunąć dzień wolny?')">
                            <input type="hidden" asp-for="@item.InaccessibleDayID" />
                            <input type="submit" value="Usuń dzień wolny" class="btn btn-outline-danger float-right buttMargin" />
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
