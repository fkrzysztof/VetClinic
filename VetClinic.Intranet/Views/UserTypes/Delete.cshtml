@model VetClinic.Data.Data.Clinic.UserType

@{
    ViewData["Title"] = "Delete";
}

<h4>Usuń element:</h4>
<h3>Jestes pewie, że chcesz usunąc rodzaj użytkownika?</h3>
<div>
    <h4>UserType</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nazwa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Opis
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="UserTypeID" />
        <input type="submit" value="Usuń" class="btn btn-primary" />

        <a class="btn btn-outline-primary" role="button" asp-action="Index">
            <span class="fas fa-arrow-circle-left"></span> Wróć do listy
        </a>
    </form>
</div>
