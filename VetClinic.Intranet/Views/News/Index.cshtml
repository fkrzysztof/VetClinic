@model IEnumerable<VetClinic.Data.Data.Clinic.News>

@{
    ViewData["Title"] = "Wiadomości nieodczytane";
}

<div class="row mb-3">
    <div class="col-12">
        <a class="btn btn-outline-success float-right mb-3" role="button" aria-haspopup="true" aria-expanded="false" asp-action="Create">
        <i class="fas fa-plus-circle"></i>
        Dodaj
        </a>
    </div>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6">
            <div class="card no-gutters">
                <div class="row no-gutters">
                    <div class="col-md-8">
                        <div class="card-body">
                            <a role="button" asp-action="Details" asp-route-id="@item.NewsID">
                                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                            </a>
                            
                            <p class="card-text">@Html.DisplayFor(modelItem => item.Message)</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card-body">
                            <div class="card-image">
                                @{
                                    if (item.SenderUser.Image != null)
                                    {
                                        var base64 = Convert.ToBase64String(item.SenderUser.Image);
                                        var imgSrc = String.Format("data:Image/jpeg;base64,{0}", base64);
                                        <img style="width: 100px; height:100px" class="card-img" src="@imgSrc" />
                                    }
                                    else
                                    {
                                        <img style="width: 100px; height:100px" class="card-image" src="~/images/empty_image.png" />
                                    }
                                }
                            </div>
                            <div class="card-im">

                            </div>
                            <h8 class="card-title" style="text-align: center;">@Html.DisplayFor(modelItem => item.SenderUser.FirstName) @Html.DisplayFor(modelItem => item.SenderUser.LastName)</h8>
                        </div>
                        
                    </div>
                </div>
            </div>
            <br>
        </div>
    }
    </div>
