<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6">
            <div class="card no-gutters">
                <div class="row no-gutters">
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.Message)</p>
                            <a class="btn btn-outline-primary btn-sm" role="button" asp-action="Edit" asp-route-id="@item.NewsID">
                                <span class="fas fa-pen"></span>
                            </a>
                            <a class="btn btn-outline-primary btn-sm" role="button" asp-action="Details" asp-route-id="@item.NewsID">
                                <span class="fas fa-list-alt"></span>
                            </a>
                            <a class="btn btn-outline-primary btn-sm" role="button" asp-action="Delete" asp-route-id="@item.NewsID">
                                <span class="fas fa-trash-alt"></span>
                            </a>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card-body">
                            @{
                                if (item.SenderUser.Image != null)
                                {
                                    var base64 = Convert.ToBase64String(item.SenderUser.Image);
                                    var imgSrc = String.Format("data:Image/jpeg;base64,{0}", base64);
                                    <img style="width: 100px; height:100px" class="card-img" src="@imgSrc" />
                                }
                                else
                                {
                                    <img style="width: 100px; height:100px" class="card-img" src="~/images/empty_image.png" />
                                }
                            }

                        </div>
                        <h7 class="card-title" style="text-align: center;">      @Html.DisplayFor(modelItem => item.SenderUser.FirstName) @Html.DisplayFor(modelItem => item.SenderUser.LastName)</h7>
                    </div>
                </div>
            </div>
            <br>
        </div>
    }
    </div>
