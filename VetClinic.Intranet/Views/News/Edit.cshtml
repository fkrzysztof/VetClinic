@model VetClinic.Data.Data.Clinic.News

@{
    ViewData["Title"] = "Edycja";
}

<h4>Edytuj wiadomość:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NewsID" />
            <input type="hidden" asp-for="UserID" />
            <div class="form-group">
                <label class="control-label">Grupa użytkowników</label>
                <select asp-for="UserTypeID" class="form-control" asp-items="ViewBag.UserTypeID"></select>
                <span asp-validation-for="UserTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Temat wiadomości</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Treść wiadomości</label>
                <input asp-for="Message" class="form-control" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsReaded" />
                    <label class="control-label">Czy odczytany</label>
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" />
                    <label class="control-label">Czy aktywny</label>
                </label>
            </div>
            <div class="form-group">
                <label class="control-label">Data od</label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Data do</label>
                <input asp-for="ExpirationDate" class="form-control" />
                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script>
    function generatePassword() {
        event.preventDefault();
        var buf = new Uint8Array(6);
        window.crypto.getRandomValues(buf);
        document.getElementById("passwordInput").value = btoa(String.fromCharCode.apply(null, buf));
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
