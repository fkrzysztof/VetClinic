@model VetClinic.Data.Data.Clinic.News

@{
    ViewData["Title"] = "Usuwanie";
}

<h4>Usuń wiadomośc:</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Treść wiadomości
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Message)
        </dd>
        <dt class="col-sm-2">
            Czy odczytany
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsReaded)
        </dd>
        <dt class="col-sm-2">
           Czy aktywny
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class="col-sm-2">
            Dada od
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            Data do
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExpirationDate)
        </dd>
        <dt class="col-sm-2">
            Nadawca
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SenderUser.FirstName) @Html.DisplayFor(model => model.SenderUser.LastName)
        </dd>
        <dt class="col-sm-2">
            Grupa odbiorców
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReceiverUserTypes.Description)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="NewsID" />
        <input type="submit" value="Usuń" class="btn btn-primary" />

        <a class="btn btn-outline-primary" role="button" asp-action="Index">
            <span class="fas fa-arrow-circle-left"></span> Wróć do listy
        </a>
    </form>
</div>
