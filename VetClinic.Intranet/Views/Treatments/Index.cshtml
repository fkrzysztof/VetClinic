@model IEnumerable<VetClinic.Data.Data.Clinic.Treatment>

@{
    ViewData["Title"] = "Zabiegi";
}
<a class="btn btn-outline-success float-right mb-3" role="button" aria-haspopup="true" aria-expanded="false" asp-action="Create">
    <i class="fas fa-plus-circle"></i>
    Dodaj
</a>

<div class="table-responsive">
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    Nazwa
                </th>
                <th>
                    Opis
                </th>
                <th>
                    Ostatnia modyfikacja
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="@(item.IsActive ? "item-active" : "item-not-active" )">
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.TreatmentID">
                            @Html.DisplayFor(modelItem => item.Name)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.UpdatedDate)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>