@model VetClinic.Data.Data.Clinic.Permission

@{
  ViewBag.Title = "Edycja Uprawnienia";
}

    <div class="row">

        <div class="col-sm-6">
            <h1>Edycja Uprawnienia</h1>
        </div>
        <div class="col-sm-6 text-right float-right">
            <a class="btn btn-outline-primary" asp-controller="Permissions" asp-action="Index">
                Powrót
            </a>
        </div>
    </div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PermissionID" />
            <div class="form-group">
                <label class="control-label">Nazwa</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                  <label class="control-label">Opis</label>
                  @*<label asp-for="Description" class="control-label"></label>*@
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
