@model IEnumerable<VetClinic.Data.Data.Clinic.Permission>

@{
  ViewBag.Title = "Uprawnienia";
}


<div class="row mb-3">
    <div class="col-12">
        <a class="btn btn-outline-success float-right" asp-action="Create"><i class="fas fa-plus-circle"></i> Dodaj</a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    Nazwa
                </th>
                <th>
                    Opis
                </th>                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr class="@(item.IsActive ? "item-active" : "item-not-active") tableCursor" onclick="location.href = '@(Url.Action("Edit", "Permissions", new { id = item.PermissionID }, null))'">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>               
            </tr>
            }
        </tbody>
    </table>
</div>
