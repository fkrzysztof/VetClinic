@model IEnumerable<VetClinic.Data.Data.Clinic.Permission>

@{
  ViewBag.Title = "Uprawnienia";
}


<div class="row mb-3">
    <div class="col-12">
        <a class="btn btn-outline-success float-right" asp-action="Create"><i class="fas fa-plus-circle"></i> Dodaj nowe uprawnienie</a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    Nazwa
                </th>
                <th>
                    Opis
                </th>
                <th>
                    Ostatnia modyfikacja
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr class="@(item.IsActive ? "item-active" : "item-not-active" )">
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PermissionID">
                        @Html.DisplayFor(modelItem => item.Name)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedDate)
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
