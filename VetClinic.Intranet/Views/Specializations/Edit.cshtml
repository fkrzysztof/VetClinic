@model VetClinic.Data.Data.Clinic.Specialization

@{
    ViewData["Title"] = String.Format("Edycja specjalizacji {0}", Model.Name);
}


<form asp-action="Edit" enctype="multipart/form-data">
    <div class="form-row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="SpecializationID" />
        <div class="form-group col-md-12">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="label1">Nazwa</span>
                </div>
                <input type="text" asp-for="Name" class="form-control" aria-describedby="label1" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-12">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Opis</span>
                </div>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
    </div>

    <input type="submit" value="Zapisz zmiany" class="btn btn-success float-right buttMargin" />
</form>

@if (Model.IsActive)
{
<form asp-action="Delete" asp-route-id="@Model.SpecializationID" onsubmit="alert('Na pewno chcesz usunąć specjalizacje?')">
    <input type="hidden" asp-for="@Model.SpecializationID" />
    <input type="submit" value="Usuń specjalizacje" class="btn btn-outline-danger buttMargin" />
</form>
} else
{
<form asp-action="Restore" asp-route-id="@Model.SpecializationID">
    <input type="hidden" asp-for="@Model.SpecializationID" />
    <input type="submit" value="Przywróć specjalizacje" class="btn btn-outline-success buttMargin" />
</form>
}



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
