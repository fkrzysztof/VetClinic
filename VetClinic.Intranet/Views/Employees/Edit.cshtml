                    <span class="input-group-text" id="label1">Opis</span>
                </div>
                <input type="text" asp-for="Description" class="form-control" aria-describedby="label1" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        @*</div>*@
    </div>
    <div class="form-row">
        @*<div class="row inputGroupMargin">*@
        <div class="form-group col-md-4">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="label1">E-mail</span>
                </div>
                <input type="text" asp-for="Email" class="form-control" aria-describedby="label1" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-md-4">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="label1">Login</span>
                </div>
                <input type="text" asp-for="Login" class="form-control" aria-describedby="label1" readonly="readonly" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-md-4">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="label1">Hasło</span>
                </div>
                <input readonly="readonly" id="passwordInput" asp-for="Password" class="form-control" aria-describedby="label1" />
                <a role="button" onclick="generatePassword()" class="btn btn-primary w-100">Generuj hasło</a>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        @*<div class="form-group col-md-4">
                <div class="input-group mb-3">
                    <div class="input-group-append">
                        <input type="file" class="form-control-file" id="file" name="file" />
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                </div>
            </div>*@
        @*</div>*@
    </div>
    <div class="form-row">
        @*<div class="row inputGroupMargin">*@
        <div class="form-group col-md-10">
            <div class="input-group mb-3">
                <div class="input-group-append">
                    <div class="card-image">
                        @{
                            if (Model.Image != null)
                            {
                                var base64 = Convert.ToBase64String(Model.Image);
                                var imgSrc = String.Format("data:Image/jpeg;base64,{0}", base64);
                                <img style="width: 250px; height:250px" src="@imgSrc" />
                            }
                            else
                            {
                                <img style="width: 250px; height:250px" src="~/images/empty_image.png" />
                            }
                        }

                        <br />
                        <input type="file" id="files" asp-for="Image" class="inputfile" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                </div>
                @*<input type="file" class="form-control-file" id="file" name="file" />
                    <span asp-validation-for="Photo" class="text-danger"></span>*@
            </div>
        </div>
    </div>
    @*</div>*@


    <hr />
    <div class="form-row">
        <input type="submit" value="Zapisz" class="btn btn-primary buttMargin" />
        <button type="reset" class="btn btn-danger buttMargin">Resetuj</button>
        <a class="btn btn-outline-primary" role="button" asp-action="Index">
            <span class="fas fa-arrow-circle-left"></span> Wróć do listy
        </a>
    </div>
</form>
