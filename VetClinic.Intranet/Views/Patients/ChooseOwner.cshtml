<div class="table-responsive">
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>

                </th>
                <th>
                    Imię
                </th>
                <th>
                    Nazwisko
                </th>
                <th>
                    Miasto
                </th>
                <th>
                    E-mail
                </th>
                <th>
                    Nr.Telefonu
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody id="myTable">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a class="wspolna btn btn-outline-primary btn-sm" role="button" id="@item.UserID" dane="@item.FirstName @item.LastName">
                            <span class="fas fa-check"></span>
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        <a class="btn btn-outline-primary btn-sm" role="button" asp-controller="AllUsers" asp-action="Edit" asp-route-id="@item.UserID">
                            <span class="fas fa-pen"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>

  

    $(document).ready(function () {
        $(".wspolna").click(function (evt) {
          
            var value = $(this).attr("id");         
            var value2=$(this).attr("dane")

            $('#PatientUserID').val(value);
            $('#daneWlasciciela').val(value2);
            $('#exampleModal').modal('hide');
        });
    });


    $(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>