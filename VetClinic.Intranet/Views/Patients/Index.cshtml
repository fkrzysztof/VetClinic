@model IEnumerable<VetClinic.Data.Data.Clinic.Patient>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a class="btn btn-outline-primary" role="button" aria-haspopup="true" aria-expanded="false" asp-action="Create">
        <i class="fas fa-plus-circle"></i>
        Dodaj nowy element
    </a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Szukaj według imienia, daty urodzenia lub opisu: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Szukaj" class="btn btn-primary" />

            <a class="btn btn-outline-primary" role="button" asp-action="Index">
                <span class="fas fa-arrow-circle-left"></span> Wyczyść filtr
            </a>

        </p>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    Imię
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BirthDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PatientNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.KennelName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PatientType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PatientUser)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    <a asp-action="Visit" asp-route-id="@item.PatientID">
                        @Html.DisplayFor(modelItem => item.Name)
                    </a>
                </td>
                <td>
                    @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.BirthDate))
                </td>
                <td style="text-align:right">
                    @Html.DisplayFor(modelItem => item.PatientNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KennelName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PatientType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PatientUser.FirstName)
                    @Html.DisplayFor(modelItem => item.PatientUser.LastName)
                </td>
                <td>
                    <a class="btn btn-outline-primary btn-sm" role="button" asp-action="Edit" asp-route-id="@item.PatientID">
                        <span class="fas fa-pen"></span>
                    </a>
                    <a class="btn btn-outline-primary btn-sm" role="button" asp-action="Details" asp-route-id="@item.PatientID">
                        <span class="fas fa-list-alt"></span>
                    </a>
                    <a class="btn btn-outline-primary btn-sm" role="button" asp-action="Delete" asp-route-id="@item.PatientID">
                        <span class="fas fa-trash-alt"></span>
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
