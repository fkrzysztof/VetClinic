@model IEnumerable<VetClinic.Data.Data.Clinic.User>

@{
    Layout = null;
}

<div id="accordion">
    <div class="card">
        <div class="card-header" id="Filtry">
            <div class="mb-0">
                Filtr
                <button class="btn btn-link" data-toggle="collapse"
                        data-target="#collapse1" aria-expanded="true" aria-controls="collapseOne">
                    <i class="fa fa-bars text-black"></i>
                </button>
            </div>
        </div>
        <div id="collapse1" class="collapse show" aria-labelledby="Filtr" data-parent="#accordion">
            <div class="card-body">

                <form class="form-inline" asp-action="dodajWlasciciela" method="get">
                    <div class="form-group mb-2">
                        <label>Szukaj: </label>
                    </div>
                    <div class="form-group mx-sm-3 mb-2">
                        <input type="text" class="form-control" id="myInput" @*name="SearchString" value="@ViewData["currentFilter"]"*@ placeholder="Login,Nazwisko,E-mail,Miasto" /> @*Podpiąć swoje dane*@
                    </div>
                    <button type="submit" class="btn btn-primary mb-2">Szukaj</button>
                    <a role="button" class="btn btn-outline-primary mb-2" asp-action="dodajWlasciciela" id="usunFiltry"> <i class="fas fa-minus-circle"></i> Usuń filtry</a> @*Podpiąć swoje dane*@
                </form>
            </div>
        </div>
    </div>
</div>
<br />
<p>
    <a class="btn btn-outline-primary" role="button" aria-haspopup="true" aria-expanded="false" asp-action="Create">
        <i class="fas fa-plus-circle"></i>
        Dodaj Klienta
    </a>
</p>
<div class="table-responsive">
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>

                </th>
                <th>
                    Imię
                </th>
                <th>
                    Nazwisko
                </th>
                <th>
                    Miasto
                </th>
                <th>
                    E-mail
                </th>
                <th>
                    Nr.Telefonu
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody id="myTable">
            @foreach (var item in Model)
            {
                <tr>
                    <td><button type="button" style="width:16px;height:16px" @*onclick="pokaz()"*@ class="wspolna" id="@item.UserID" id2="@item.FirstName @item.LastName" ></button></td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        <a class="btn btn-outline-primary btn-sm" role="button" asp-action="Edit" asp-route-id="@item.UserID">
                            <span class="fas fa-pen"></span>
                        </a>
                        <a class="btn btn-outline-primary btn-sm" role="button" asp-action="Details" asp-route-id="@item.UserID">
                            <span class="fas fa-list-alt"></span>
                        </a>
                        <a class="btn btn-outline-primary btn-sm" role="button" asp-action="Delete" asp-route-id="@item.UserID">
                            <span class="fas fa-trash-alt"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>

  

    $(document).ready(function () {
        $(".wspolna").click(function (evt) {
          
            var value = $(this).attr("id");         
            var value2=$(this).attr("id2")

            $('#PatientUserID').val(value);
            $('#daneWlasciciela').val(value2);
            $('#exampleModal').modal('hide');
        });
    });


    $(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>