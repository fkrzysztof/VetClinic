     $(document).ready(function(){
	    $(".wspolna").click(function(evt){          
            var item = $(this).attr("id");
            if (window.opener != null && !window.opener.closed) {
            var wlasciciel = window.opener.document.getElementById("wlasciciel");
            wlasciciel.value = document.getElementById("item").value;
        }
