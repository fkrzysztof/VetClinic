@model VetClinic.Data.Data.Clinic.Patient

@{
    ViewData["Title"] = "Delete";
}
<h4>Usuń:</h4>
<h2>Pacjent/Zwierzak</h2>
<hr />

<div class="row inputGroupMargin">
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text">Imię pacjenta</span>
        </div>
        <input type="text" class="form-control" value="@Model.Name">
    </div>
</div>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PatientNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PatientNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.KennelName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KennelName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AddedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AddedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UpdatedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PatientType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PatientType.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PatientUser)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PatientUser.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PatientAddedUser)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PatientAddedUser.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PatientUpdatedUser)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PatientUpdatedUser.City)
        </dd>
    </dl>
</div>
<hr />
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="PatientID" />
        <input type="submit" value="Usuń" class="btn btn-primary buttMargin" />

        <a class="btn btn-outline-primary" role="button" asp-action="Index">
            <span class="fas fa-arrow-circle-left"></span> Wróć do listy
        </a>
    </form>
</div>
