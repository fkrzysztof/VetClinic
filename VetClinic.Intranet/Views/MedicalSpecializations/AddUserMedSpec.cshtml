@model VetClinic.Data.Data.Clinic.MedicalSpecialization

@{
    ViewData["Title"] = "Nowa specjalizacja lekarza";
}

<form asp-action="AddUserMedSpec" enctype="multipart/form-data">
    <div class="form-row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-12">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="label1">Użytkownik</span>
                </div>
                <select type="select" asp-for="@Model.UserID" class="form-control" aria-describedby="label1" asp-items="ViewBag.UserID"></select>
            </div>
        </div>
        <div class="form-group col-12">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="label1">Specjalizacja</span>
                </div>
                <select type="select" asp-for="@Model.SpecializationID" class="form-control" aria-describedby="label1" asp-items="ViewBag.SpecializationID"></select>
            </div>
        </div>
    </div>
    <input type="submit" value="Utwórz" class="btn btn-success float-right buttMargin" />
    <a class="btn btn-danger mr-3" role="button" href='javascript:history.go(-1)'>Anuluj</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}