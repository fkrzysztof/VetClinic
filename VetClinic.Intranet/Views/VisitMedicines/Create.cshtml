@model VetClinic.Data.Data.Clinic.VisitMedicine

@{
    Layout = null;
}

    <div class="row">
        <div class="col">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="VisitID" />
                    <input type="hidden" name="patientId" id="patientId" value="@ViewBag.patientId" />
                </div>
                <div class="row">
                    <div class="form-group col-10">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="label1">Lek</span>
                            </div>
                            <select class="custom-select" asp-for="MedicineID" asp-items="ViewBag.MedicineID" data-width="100%" aria-describedby="label1"></select>
                        </div>
                    </div>
                    <div class="form-group col-2">
                        <input type="submit" value="Dodaj" class="btn btn-outline-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
