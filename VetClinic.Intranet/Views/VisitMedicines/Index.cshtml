@model IEnumerable<VetClinic.Data.Data.Clinic.VisitMedicine>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Visit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medicine)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Visit.VisitID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medicine.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VisitMedicineID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VisitMedicineID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VisitMedicineID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
