@using Microsoft.AspNetCore.Http;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewData["Title"] - VetClinic.Intranet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <!-- Page level plugin CSS-->
    <link href="~/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin.css" rel="stylesheet">
</head>


<body id="page-top">
    <nav class="navbar navbar-expand navbar-dark bg-dark static-top">
        <a class="navbar-brand mr-0" href="#">
            <img src="../images/logo.svg" width="35" height="35" class="d-inline-block align-top" alt="">
            VetClinic
        </a>
        <button class="btn btn-link btn-sm order-1 order-sm-0" id="sidebarToggle" href="#">
            <i class="fas fa-bars fa-lg "></i>
        </button>

        <!-- Navbar -->
        <ul class="navbar-nav ml-auto">
            <li class="nav-item dropdown no-arrow">
                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-user-circle fa-lg"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                    <a class="dropdown-item"><b> @Context.Session.GetString("Login")</b></a>
                    <a class="dropdown-item" asp-action="Index" asp-controller="PasswordChange">Zmień hasło</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">Wyloguj się</a>
                </div>
            </li>
        </ul>
    </nav>

    <div id="wrapper">
        <!-- SIDEBAR -->
        <ul class="sidebar navbar-nav">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown"
                   role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Pacjenci</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                    <a class="dropdown-item" asp-area="" asp-controller="Patients" asp-action="Index">Lista</a>
                    <a class="dropdown-item" asp-area="" asp-controller="PatientTypes" asp-action="Index">Typ pacjenta</a>
                </div>
            </li>

            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown"
                   role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Użytkownicy</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                    <a class="dropdown-item" asp-area="" asp-controller="AllUsers" asp-action="Index">Wszyscy</a>

                    @if (ViewBag.HasAccessToAdmins != null)
                    {
                        <a class="dropdown-item" asp-area="" asp-controller="Admins" asp-action="Index">Administratorzy</a>
                    }

                    <a class="dropdown-item" asp-area="" asp-controller="Doctors" asp-action="Index">Lekarz</a>
                    <a class="dropdown-item" asp-area="" asp-controller="Employees" asp-action="Index">Pracownik</a>
                    <a class="dropdown-item" asp-area="" asp-controller="Customers" asp-action="Index">Klient</a>
                </div>
            </li>

            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown"
                   role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Specjalizacje</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                    <a class="dropdown-item" asp-area="" asp-controller="MedicalSpecializations" asp-action="Index">Spec. Lekarza</a>
                    <a class="dropdown-item" asp-area="" asp-controller="Specializations" asp-action="Index"> Lista Specjalizacji</a>
                </div>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="RecentNews" asp-action="Index">
                    <span>Aktualności</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="UserTypes" asp-action="Index">
                    <span>Grupy uprawnień</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Medicines" asp-action="Index">
                    <span>Leki</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="ScheduleBlocks" asp-action="Index">
                    <span>Bloki</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Treatments" asp-action="Index">
                    <span>Zabiegi</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link toggle" asp-area="" asp-controller="Calendar" asp-action="Index">
                    <i class="fas fa-calendar-alt"></i> <span>Rezerwacje</span>
                </a>
            </li>
        </ul>

        <div id="content-wrapper">
            <div class="container-fluid">
                <!-- TREŚĆ STRON -->
                <div class="card">
                    <div class="card-header">
                        @ViewBag.Title
                    </div>
                    <div class="card-body">
                        <div class="container">
                            <main role="main" class="pb-3">
                                @RenderBody()
                            </main>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <footer class="sticky-footer">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright © VetClinic 2019</span>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <!-- /#wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Opuszczasz nas? :( </h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Wybierz wyloguj aby zakończyć sesję.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Zostaję! :) </button>
                    <a class="btn btn-primary" asp-area="" asp-controller="Login" asp-action="Logout">Wyloguj</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Page level plugin JavaScript-->
    <script src="~/vendor/chart.js/Chart.min.js"></script>
    <script src="~/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin.min.js"></script>

    <!-- Demo scripts for this page-->
    <script src="~/js/demo/datatables-demo.js"></script>
    <script src="~/js/demo/chart-area-demo.js"></script>

    @RenderSection("Scripts", false)
</body>
</html>

