@model IEnumerable<VetClinic.Data.Data.Clinic.Medicine>

@{
    ViewData["Title"] = "Lista lekow";
}

    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>@ViewData["Title"] - VetClinic.Intranet</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <!-- Custom fonts for this template-->
        <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
        <!-- Page level plugin CSS-->
        <link href="~/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
        <!-- Custom styles for this template-->
        <link href="~/css/sb-admin.css" rel="stylesheet">
        <script>
            kendo.culture("pl-PL");
        </script>
    </head>

<p>
    <a class="btn btn-outline-primary" role="button" aria-haspopup="true" aria-expanded="false" asp-action="Create">
        <i class="fas fa-plus-circle"></i>
        Dodaj
    </a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Szukaj: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" placeholder="Nazwa/Typ leku"/>
            <input type="submit" value="Znajdź" class="btn btn-primary" />
            <a class="btn btn-outline-primary" role="button" asp-action="Index">
                <span class="fas fa-arrow-circle-left"></span> Usuń filter
            </a>
        </p>
    </div>
</form>


<div class="table-responsive">
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(m=>m.MedicineType.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="text-align:right">
                    @Convert.ToString(string.Format("{0:0.00} PLN", item.Price))
                </td>   
                <td>
                    @Html.DisplayFor(m=>item.MedicineType.Name)
                </td>
                <td>
                    <a class="btn btn-outline-primary btn-sm" role="button" asp-action="Edit" asp-route-id="@item.MedicineID">
                        <span class="fas fa-pen"></span>
                    </a>
                    <a class="btn btn-outline-primary btn-sm" role="button" asp-action="Details" asp-route-id="@item.MedicineID">
                        <span class="fas fa-list-alt"></span>
                    </a>
                    <a class="btn btn-outline-primary btn-sm" role="button" asp-action="Delete" asp-route-id="@item.MedicineID">
                        <span class="fas fa-trash-alt"></span>
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>