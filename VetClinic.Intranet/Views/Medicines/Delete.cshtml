@model VetClinic.Data.Data.Clinic.Medicine

@{
    ViewData["Title"] = "Usuń";
}
<h4>Usuń:</h4>
<h2>Lek</h2>
<hr />

<div class="row inputGroupMargin">
    @*Sekcja z nazwą elementu (zazwyczaj tytuł) W przypadku MODUŁÓW Z np. imieniem i nazwiskiem
        dać obok siebie (zakomentowane poniżej). Zamiast PLACEHOLDER w INPUT jest VALUE Z MODEL.IMIE ETC!!!!!!!!!!!!*@
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="label1">Nazwa Leku</span>
        </div>
        <input type="text" class="form-control" value="@Model.Name" aria-describedby="label1" disabled>
    </div>
</div>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Typ leku
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MedicineType.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<hr />
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="MedicineID" />
        <input type="submit" value="Usuń" class="btn btn-primary buttMargin" />

        <a class="btn btn-outline-primary" role="button" asp-action="Index">
            <span class="fas fa-arrow-circle-left"></span> Wróć do listy
        </a>
    </form>
</div>
