@model VetClinic.Data.Data.Clinic.Medicine

@{
    ViewData["Title"] = "Detale";
}
<h4>Szczegóły:</h4>
<h2>Lek</h2>
<hr />
<div class="row inputGroupMargin">
    @*Sekcja z nazwą elementu (zazwyczaj tytuł) W przypadku MODUŁÓW Z np. imieniem i nazwiskiem
        dać obok siebie (zakomentowane poniżej). Zamiast PLACEHOLDER w INPUT jest VALUE Z MODEL.IMIE ETC!!!!!!!!!!!!*@
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="label1">Nazwa Leku</span>
        </div>
        <input type="text" class="form-control" value="@Model.Name" aria-describedby="label1" disabled>
    </div>
</div>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AddedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AddedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UpdatedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MedicineType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MedicineType.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MedicineAddedUser)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MedicineAddedUser.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MedicineUpdatedUser)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MedicineUpdatedUser.City)
        </dd>
    </dl>
</div>
<hr />

<div>
    <a class="btn btn-primary buttMargin" role="button" asp-action="Edit" asp-route-id="@Model.MedicineID">
        <span class="fas fa-pen"></span> Edytuj
    </a>
    <a class="btn btn-outline-primary" role="button" asp-action="Index">
        <span class="fas fa-arrow-circle-left"></span> Wróć do listy
    </a>
</div>
