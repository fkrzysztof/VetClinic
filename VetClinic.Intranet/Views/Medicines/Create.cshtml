@model VetClinic.Data.Data.Clinic.Medicine

@{
    ViewData["Title"] = "Dodawanie leku";
}
<form asp-action="Create">

    <div class="form-row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group col-md-6">
        <label class="control-label">Typ leku</label>
        <select asp-for="MedicineTypeID" class="form-control" asp-items="ViewBag.MedicineTypeID"></select>
        <span asp-validation-for="MedicineTypeID" class="text-danger"></span>
    </div>
        <div class="form-group col-md-6">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Nazwa Leku" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
         <textarea asp-for="Description" class="form-control" id="exampleFormControlTextarea1" rows="5" placeholder="Opis Leku"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-row">
        <div class="form-group col-md-2">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" placeholder="Cena" />
            <span asp-validation-for="Price" class="text-danger"></span>        </div>
        
    </div>
    <div class="form-group">
        <input type="submit" value="Zapisz" class="btn btn-primary" />
    </div>
</form>

<div>
    <a class="btn btn-outline-primary" role="button" asp-action="Index">
        <span class="fas fa-arrow-circle-left"></span> Wróć do listy
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

