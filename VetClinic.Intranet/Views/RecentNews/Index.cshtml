@model IEnumerable<VetClinic.Data.Data.CMS.RecentNews>

@{
    ViewData["Title"] = "Aktualności";
}


<div class="row mb-3">
    <div class="col-12">
        <a class="btn btn-outline-success float-right mb-3" role="button" aria-haspopup="true" aria-expanded="false" asp-action="Create">
            <i class="fas fa-plus-circle"></i>
            Dodaj nową aktualność
        </a>
    </div>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6">
            <div class="card no-gutters">
                <div class="row no-gutters">
                    <div class="col-md-8">
                        <div class="card-body">
                            <a class="btn btn-outline-primary btn-sm" role="button" asp-action="Edit" asp-route-id="@item.RecentNewsID">
                                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                            </a>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card-body">
                            @{
                                if (item.Image != null)
                                {
                                    var base64 = Convert.ToBase64String(item.Image);
                                    var imgSrc = String.Format("data:Image/jpeg;base64,{0}", base64);
                                    <img style="width:100px;height:100px" src="@imgSrc" />
                                }
                                else
                                {
                                    <img style="width: 100px;height:100px" src="~/images/empty_image.png" />
                                }
                            }


                        </div>
                    </div>
                </div>
            </div>
            <br>
        </div>
    }
</div>