@model IEnumerable<VetClinic.Data.Data.CMS.RecentNews>

@{
    ViewData["Title"] = "Aktualności";
}


<div class="row mb-3">
    <div class="col-12">
        <a class="btn btn-outline-success float-right mb-3" role="button" aria-haspopup="true" aria-expanded="false" asp-action="Create">
            <i class="fas fa-plus-circle"></i>
            Dodaj
        </a>
    </div>
</div>

<div class="section">
    <div class="row" style="justify-content:center">
        <div class="card-deck justify-content-center">
            @foreach (var item in Model)
            {
                <div>
                    <div class="card text-center recentNewsCard @(item.IsActive ? "item-active" : "item-not-active")">
                        <div class="col-4 mx-auto d-flex justify-content-center flex-wrap cardImagePadding" style="padding-top: 15px;">
                            @{
                                if (item.Image != null)
                                {

                                    var base64 = Convert.ToBase64String(item.Image);
                                    var imgSrc = String.Format("data:Image/jpeg;base64,{0}", base64);
                                    <img class="newsCardImg" src="@imgSrc" alt="Card image cap">
                                }
                                else
                                {
                                    <img class="newsCardLogo" src="~/images/logo.svg" alt="Card image cap">
                                }
                            }
                        </div>
                        <div class="card-body" style="padding-bottom: 0px;">
                            <h4 class="card-title">@item.LinkTitle</h4>
                            <p class="card-text giveMeEllipsis">@Html.Raw(item.Title)</p>
                        </div>
                        <div class="card-footer bg-transparent border-0 recentNewsCardFooter">
                            <a class="btn btn-outline-primary" asp-controller="RecentNews" asp-action="Edit" asp-route-id="@item.RecentNewsID" role="button">Więcej &raquo;</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
