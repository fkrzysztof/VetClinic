@model IEnumerable<VetClinic.Data.Data.Clinic.Reservation>


@{
    ViewData["Title"] = "Przyjęcia na dziś";
}

<a class="btn btn-outline-success float-right mb-3" role="button" aria-haspopup="true" aria-expanded="false" asp-action="Index" asp-controller="Calendar">
    <i class="fas fa-plus-circle"></i>
    Dodaj
</a>

<div class="table-responsive">
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    Pacjent
                </th>
                <th>
                    Data wizyty
                </th>
                <th>
                    Użytkownik rezerwujący
                </th>
                <th>
                   
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                int test = 1;

                <tr class="@(item.IsActive ? "item-active" : "item-not-active" )" onclick="location.href = '@(Url.Action("Edit", "Reservations", new { id = item.ReservationID }, null))'">
                    <td>
                        @Html.DisplayFor(modelItem => item.Patients.Name)
                    </td>
                    <td class="text-left">
                        @Html.DisplayFor(modelItem => item.DateOfVisit)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-controller="AllUsers" asp-route-id="@item.ReservationUser.UserID">
                            @Html.DisplayFor(modelItem => item.ReservationUser.FirstName)
                            @Html.DisplayFor(modelItem => item.ReservationUser.LastName)
                        </a>
                    </td>
                    @if (item.Visit != null)
                    {
                        <td class="text-center">
                            @foreach (var data in item.Visit)
                            {
                                test = DateTime.Compare(item.DateOfVisit, data.DateOfVisit);
                                if (test == 0)
                                {
                                    <a class="btn btn-danger mr-sm-3 ml-sm-3" asp-action="Visit" asp-controller="Patients" asp-route-id="@item.PatientID" asp-fragment="@data.VisitID">
                                        Podgląd wizyty
                                    </a>
                                    break;
                                }
                            }
                        </td>
                    }

                    @if (test != 0)
                    {

                        <td class="text-center">
                            <a class="btn btn-danger mr-sm-3 ml-sm-3" asp-action="AddVisitFromReservation" asp-route-id="@item.ReservationID" onclick="return confirm('Czy chcesz utworzyc wizytę')">
                                Utwórz wizytę
                            </a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
