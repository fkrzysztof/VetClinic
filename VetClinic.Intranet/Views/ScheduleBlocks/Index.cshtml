@model IEnumerable<VetClinic.Data.Data.Clinic.ScheduleBlock>

@{
    ViewData["Title"] = "Bloki";
}
<div class="row mb-3">
    <div class="col-12">
        <a class="btn btn-outline-success float-right mb-3" role="button" aria-haspopup="true" aria-expanded="false" asp-action="Create">
            <i class="fas fa-plus-circle"></i>
            Dodaj
        </a>
    </div>
</div>

<div class="justify-content-end" >
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-xl-3 col-lg-4 col-md-6">
                <div class="card mb-4 border-danger">
                    <div class="card-body">
                        <h3 class="card-title">@Convert.ToString($"{ item.Time:hh}"+":"+$"{item.Time:mm}")</h3>

                        <form asp-action="Delete" asp-route-id="@item.ScheduleBlockID" onsubmit="alert('Na pewno chcesz usunąć blok?')">
                            <input type="hidden" asp-for="@item.ScheduleBlockID" />
                            <input type="submit" value="Usuń blok" class="btn btn-outline-danger float-right buttMargin" />
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
