@model IEnumerable<VetClinic.Data.Data.Clinic.ScheduleBlock>

@{
    ViewData["Title"] = "Bloki";
}
<div class="row mb-3">
    <div class="col-12">
        <a class="btn btn-outline-success float-right mb-3" role="button" aria-haspopup="true" aria-expanded="false" asp-action="Create">
            <i class="fas fa-plus-circle"></i>
            Dodaj
        </a>
    </div>
</div>

<div class="justify-content-end" >
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-xl-3 col-lg-4 col-md-6">
                <div class="card mb-4 border-danger">
                    <div class="card-body">
                        <h3 class="card-title">@Convert.ToString($"{ item.Time:hh}" + ":" + $"{item.Time:mm}")</h3>

                        <!-- Button to Open the Modal -->
                        <button type="button" class="btn btn-outline-danger buttMargin" data-toggle="modal" data-target="#myModal">
                            Usuń
                        </button>

                        <!-- The Modal -->
                        <div class="modal" id="myModal">
                            <div class="modal-dialog">
                                <div class="modal-content">

                                    <div class="modal-header">
                                        <h4 class="modal-title">Uwaga!</h4>
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    </div>

                                    <!-- Modal body -->
                                    <div class="modal-body">
                                        Czy chcesz usunąć blok?
                                    </div>


                                    <div class="modal-footer">
                                        <form asp-action="Delete" asp-route-id="@item.ScheduleBlockID">
                                            <input type="hidden" asp-for="@item.ScheduleBlockID" />
                                            <input type="submit" value="Tak" class="btn btn-outline-danger buttMargin" />
                                            <button type="button" class="btn btn-outline-secondary buttMargin" data-dismiss="modal">Nie</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @*<form asp-action="Delete" asp-route-id="@item.ScheduleBlockID" onsubmit="alert('Na pewno chcesz usunąć blok?')">
            <input type="hidden" asp-for="@item.ScheduleBlockID" />
            <input type="submit" value="Usuń" class="btn btn-outline-danger float-right buttMargin" />
        </form>*@
                    </div>
                </div>
            </div>
        }
    </div>
</div>
