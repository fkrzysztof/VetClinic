@model IEnumerable<VetClinic.Data.Data.Clinic.ScheduleBlock>

@{
    ViewData["Title"] = "Bloki";
}
<p>
    <a class="btn btn-outline-success float-right mb-3" role="button" aria-haspopup="true" aria-expanded="false" asp-action="Create">
        <i class="fas fa-plus-circle"></i>
        Dodaj nowy blok
    </a>
</p>
<div class="table-responsive">
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    Czas
                </th>
                <th>
                    Przedział czasowy
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align:right">
                        @Convert.ToString($"{ item.Time:hh}"+":"+$"{item.Time:mm}")
                    </td>
                    <td style="text-align:right">
                        @Convert.ToString($"{ item.TimeInterval:hh}"+":"+$"{item.TimeInterval:mm}")
                    </td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@item.ScheduleBlockID" onsubmit="alert('Na pewno chcesz usunąć blok?')">
                            <input type="hidden" asp-for="@item.ScheduleBlockID" />
                            <input type="submit" value="Usuń blok" class="btn btn-outline-danger buttMargin" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
