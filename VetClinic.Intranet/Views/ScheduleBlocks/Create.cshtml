@model VetClinic.Data.Data.Clinic.ScheduleBlock

@{
    ViewData["Title"] = "Nowy blok";
}

<form asp-action="Create">

    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="label1">Czas</span>
                </div>
                <input asp-for="Time" class="form-control" placeholder="Czas" aria-describedby="label1" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="label1">Przedział czasowy</span>
                </div>
                <input asp-for="TimeInterval" class="form-control" placeholder="???" />
                <span asp-validation-for="TimeInterval" class="text-danger"></span>
            </div>
        </div>
    </div>

    <input type="submit" value="Utwórz blok" class="btn btn-success float-right buttMargin" />
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

