@model VetClinic.Data.Data.Clinic.ScheduleBlock

@{
    ViewData["Title"] = "Nowy blok";
}

    <form asp-action="Create">
        <div class="form-row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group col-md-6">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="label1">Czas</span>
                    </div>
                    <input class="form-control" placeholder="Wybierz godzinę" asp-for="Time" type="text" id="DatePicker" autocomplete="off" />
                    <span asp-validation-for="Time" class="text-danger"></span>
                </div>
            </div>
        </div>

        <input type="submit" value="Utwórz" class="btn btn-success float-right buttMargin" />
    </form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    $.datetimepicker.setLocale('pl');

    $("#DatePicker").datetimepicker({
        datepicker: false,
        step:20,
        format: 'H:i',
        lang: 'pl',
    });
</script>
