@model VetClinic.Data.Data.Clinic.ScheduleBlock

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Dodaj nowy:</h4>
<h2>Pacjent</h2>
<hr />

<form asp-action="Create">
    
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Time" class="control-label"></label>
            <input asp-for="Time" class="form-control" placeholder="Czas" />
            <span asp-validation-for="Time" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="TimeInterval" class="control-label"></label>
            <input asp-for="TimeInterval" class="form-control" placeholder="???" />
            <span asp-validation-for="TimeInterval" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Zapisz" class="btn btn-primary" />
    </div>
</form>


<div>
    <a class="btn btn-outline-primary" role="button" asp-action="Index">
        <span class="fas fa-arrow-circle-left"></span> Wróć do listy
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

