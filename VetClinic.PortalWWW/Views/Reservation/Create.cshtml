@model VetClinic.Data.Data.Clinic.Reservation
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_ClientPanelLayout.cshtml";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatientID" class="control-label"></label>
                <select asp-for="PatientID" class="form-control" asp-items="ViewBag.PatientID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfVisit" class="control-label"></label>
                <input asp-for="DateOfVisit" class="form-control" />
                <span asp-validation-for="DateOfVisit" class="text-danger"></span>
            </div>         
            <div class="form-group">
                <input type="submit" value="Zarezerwuj" class="btn btn-primary" asp-area="" asp-controller="Reservation" asp-action="Create"/>
                @*<a class="nav-link toggle" >*@
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wszystkie rezerwacje</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
