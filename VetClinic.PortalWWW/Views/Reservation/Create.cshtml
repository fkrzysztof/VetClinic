@model VetClinic.Data.Data.Clinic.Reservation
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_ClientPanelLayout.cshtml";
    DateTime DateOfVisit = Convert.ToDateTime(ViewData["DateOfVisit"]);
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatientID" class="control-label"></label>
                <select asp-for="PatientID" class="form-control" asp-items="ViewBag.PatientID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            @*<div class="form-group">
            <label asp-for="DateOfVisit" class="control-label"></label>
            <input asp-for="DateOfVisit" class="form-control" />
            <span asp-validation-for="DateOfVisit" class="text-danger"></span>
        </div>*@


            <input type="hidden" name="DateOfVisitFromCalendar" value="@DateOfVisit" />
            @if (DateOfVisit == DateTime.MinValue)
            {
                <div class="form-group">
                    <label asp-for="DateOfVisit" class="control-label"></label>
                    <select class="form-control" asp-items="ViewBag.BlokCzasowy"></select>
                </div>
            }
            else
            {
                <h3>Data wizyty pobrana z harmonogramu @DateOfVisit.ToString("dd/MM/yyyy, hh:mm") </h3>
            }
            <div class="form-group">
                <input type="submit" value="Zarejestruj" class="btn btn-primary" />
            </div>


            <div class="form-group">
                <a class="btn btn-primary" asp-area="" asp-controller="Patient" asp-action="Create">Dodaj pacjenta</a>
            </div>
            <div class="form-group">
                <a class="btn btn-primary" asp-area="" asp-controller="Patient" asp-action="Index">Wszyscy pacjenci</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-primary" role="button" asp-action="Index">
        <span class="fas fa-arrow-circle-left"></span> Wszystkie rezerwacje
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
