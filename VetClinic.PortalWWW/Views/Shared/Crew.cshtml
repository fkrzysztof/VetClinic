@model IEnumerable<VetClinic.Data.Data.Clinic.User>

<div class="section">
    <div class="row justify-content-center">
        <div class="card-deck justify-content-center">
            @foreach (var item in Model)
            {
                <div>
                    <div class="image-flip" ontouchstart="this.classList.toggle('hover');">
                        <div class="mainflip">
                            <div class="frontside">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <p>
                                            @{
                                                if (item.Image != null)
                                                {
                                                    var base64 = Convert.ToBase64String(@item.Image);
                                                    var imgSrc = String.Format("data:Image/jpeg;base64,{0}", base64);
                                                    <img class="img-fluid" style="max-height: 150px" src="@imgSrc" />
                                                }
                                                else
                                                {
                                                    <img class="img-fluid" style="max-height: 150px" src="~/images/empty_image.png" />
                                                }
                                            }
                                        </p>
                                        <h4 class="card-title">@item.FirstName @item.LastName</h4>
                                        <a href="#" class="btn btn-sm" style="background:#f3715b"><i class="fa fa-plus text-white"></i></a>
                                    </div>
                                </div>
                            </div>

                            <div class="backside">
                                <div class="card">
                                    <div class="card-body text-center mt-4">
                                        <h4 class="card-title">@item.FirstName @item.LastName</h4>
                                        <p class="giveMeEllipsis" class="card-text">@item.Description</p>
                                    </div>
                                    <div class="card-footer bg-transparent border-0" style="padding-bottom: 21px; padding-top:0px">
                                        <center>
                                            <a class="btn secColor" asp-controller="Crews" asp-action="Index" asp-route-id="@item.UserID" role="button">Więcej &raquo;</a>
                                        </center>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
