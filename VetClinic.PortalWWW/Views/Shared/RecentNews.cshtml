@model IEnumerable<VetClinic.Data.Data.CMS.RecentNews>
<div class="section">
    <div class="row" style="justify-content:center">
        <div class="card-deck justify-content-center">
            @foreach (var item in Model)
            {
                <div>
                    <div class="card text-center" style="height:370px; width:370px; margin:10px">
                        <div class="col-4 mx-auto d-flex justify-content-center flex-wrap cardImagePadding">
                            @{
                                if (item.Image != null)
                                {

                                    var base64 = Convert.ToBase64String(item.Image);
                                    var imgSrc = String.Format("data:Image/jpeg;base64,{0}", base64);
                                    <img class="newsCardImg" src="@imgSrc" alt="Card image cap">
                                }
                                else
                                {
                                    <img class="newsCardLogo" src="~/images/logo.svg" alt="Card image cap">
                                }
                            }
                        </div>
                        <div class="card-body">
                            <h4 class="card-title">@item.LinkTitle</h4>
                            <p class="card-text">@Html.Raw(item.Title)</p>
                        </div>
                        <div class="card-footer bg-transparent border-0">
                            <a class="btn secColor" asp-controller="RecentNews" asp-action="Index" asp-route-id="@item.RecentNewsID" role="button">Więcej &raquo;</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
