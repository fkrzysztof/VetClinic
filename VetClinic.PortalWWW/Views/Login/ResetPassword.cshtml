@model VetClinic.Data.Data.Clinic.User
@{
    ViewData["Title"] = "Resetowanie hasła";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <img class="card-img-top" src="~/images/logo.svg" width="100" height="100" alt="VetClinic">

                        <h4 class="card-title text-center">Resetowanie hasła</h4>
                        <form class="form-signin" asp-action="ResetPassword" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <input asp-for="ActivationToken" type="hidden" />
                            <input asp-for="Email" type="hidden" />

                            <div class="form-label-group" style="width:100%">
                                <input asp-for="Password" type="password" id="inputPassword" name="Password" class="form-control" placeholder="Hasło" required>
                                <label asp-for="Password" for="inputPassword">Hasło</label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-label-group" style="width:100%">
                                <input type="password" id="inputConfirmPassword" name="ConfirmPassword" class="form-control" placeholder="Potwierdź hasło" required>
                                <label asp-for="Password" for="inputConfirmPassword">Potwierdź hasło</label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div>
                                <button class="btn btn-lg btn-secondary btn-block text-uppercase" type="submit">Zmień hasło</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

