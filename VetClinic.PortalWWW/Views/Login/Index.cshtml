@model VetClinic.Data.Data.Clinic.User
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <img class="card-img-top" src="~/images/logo.svg" width="100" height="100" alt="VetClinic">

                        <h4 class="card-title text-center">Logowanie</h4>
                        <form class="form-signin" asp-action="Index" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-label-group">
                                <input asp-for="Login" type="text" id="Login" class="form-control" placeholder="Login" required autofocus>
                                <label asp-for="Login">Login</label>
                                <span asp-validation-for="Login" class="text-danger"></span>
                            </div>

                            <div class="form-label-group">
                                <input type="password" class="form-control" asp-for="Password" id="Password" placeholder="Hasło" required>
                                <label asp-for="Password">Hasło</label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="custom-control custom-checkbox mb-3">
                                <input type="checkbox" class="custom-control-input" id="customCheck1">
                                <label class="custom-control-label" for="customCheck1">Zapamiętaj hasło</label>
                            </div>

                            <button class="btn btn-lg btn-secondary btn-block text-uppercase" type="submit">Zaloguj</button>

                        </form>
                        <hr class="my-4">
                        <div class=" text-center">
                            <h6>Nie masz konta? Zarejestruj się!</h6>
                            @Html.ActionLink("Rejestracja", "Registration", "Login")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


