@model VetClinic.Data.Data.Clinic.User
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ChangePasswordLayout.cshtml";
}

    <div class="container">
        <form class="form-signin" asp-controller="PasswordChange" asp-action="Index" method="post">
            
                
             
                <div class="row">
                    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
 
                        <div class="card card-signin my-5">
                            <div class="card-body">
                                <h4 class="card-title text-center">Zmiana Hasła</h4>

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon3">Stare hasło</span>
                                    </div>
                                    @*<input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3">*@
                                    <input type="password" name="Password" class="form-control" id="basic-url" aria-describedby="basic-addon3" autofocus required />
                                    <div class="input-group-append">
                                        <span class="input-group-text bg-warning"></span>
                                    </div>
                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon3">Nowe hasło</span>
                                    </div>
                                    @*<input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3">*@
                                    <input type="password" name="NewPassword" class="form-control" id="basic-url" aria-describedby="basic-addon3" autofocus required />
                                    <div class="input-group-append">
                                        <span class="input-group-text bg-success"></span>
                                    </div>
                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon3">Powtórz hasło</span>
                                    </div>
                                    @*<input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3">*@
                                    <input type="password" name="NewPasswordConfirm" class="form-control" id="basic-url" aria-describedby="basic-addon3" autofocus required />
                                    <div class="input-group-append">
                                        <span class="input-group-text bg-success"></span>
                                    </div>
                                </div>

                                @*<div class="form-label-group">
            <input type="password" name="Password" class="form-control" placeholder="Stare Hasło" autofocus required>
        </div>*@
                                @*<br />
                                <div class="form-label-group">
                                    <input type="password" class="form-control" name="NewPassword" placeholder="Nowe Hasło" autofocus required>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <br />*@
                                @*<div class="form-label-group">
                                    <input type="password" class="form-control" name="NewPasswordConfirm" placeholder="Potwierdzenie Hasła" autofocus required>                                  
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>*@
                                <br />
                                <button class="btn btn-lg btn-secondary btn-block text-uppercase" type="submit">Zapisz</button>
                            </div>
                        </div>
                    </div>
                </div>
        </form>
    </div>

            

  
